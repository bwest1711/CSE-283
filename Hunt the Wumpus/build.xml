<?xml version="1.0" encoding="UTF-8"?>

<project default="run" name="Hunt the Wumpus - Build file"
	basedir=".">

	<target name="compile">
		<javac includeantruntime="false" srcdir="./src" destdir="./bin" />
	</target>

	<target name="run" depends="compile">
		<!-- Parallel allows them to run concurrently -->
		<!-- Fork allows them to run on seperate JVMs -->
		<parallel>
			<java fork="true" classname="edu.miamioh.cse283.wumpus.net.CaveSystemServer">
				<classpath path="./bin" />
				<arg value="1234" />
			</java>

			<java fork="true" classname="edu.miamioh.cse283.wumpus.net.CaveServer">
				<classpath path="./bin" />
				<arg value="1235" />
			</java>
			
			<java fork="true" classname="edu.miamioh.cse283.wumpus.net.Client">
				<classpath path="./bin" />
				<arg value="localhost" />
				<arg value="1234" />
			</java>
		</parallel>
	</target>
</project>